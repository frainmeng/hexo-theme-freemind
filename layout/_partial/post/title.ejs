<% if (item.link) { %>
	<% if (item.title){ %>
		<h1 class="title"><a href="<%- item.link %>" target="_blank"><%= item.title %></a></h1>
	<% } else { %>
		<h1 class="title"><a href="<%- item.link %>" target="_blank"><%= item.link %></a></h1>
	<% } %>
<% } else { %>
	<% if (index) { %>
	<!-- display as entry -->	
		<h3 class="title">
			<div class="date"> <%= item.date.format(config.date_format) %> </div>
			<div class="article-title"><a href="<%- config.root %><%- item.path %>" <% if(item.description) { %>title="<%= item.description %>"<% } %>><%= item.title %></a></div>						
		</h3>
	<% } else { %>
		<div class="page-header">		
			<h1><% if (item.icon) { %> <i class="<%= item.icon %>"></i> <% } %> <% if (item.page_title) { %><%= item.page_title %><% }else{ %><%= item.title %><% } %></h1>
			<!-- 访问量 -->
			<span id="busuanzi_container_site_pv">
				Total pv：<span id="busuanzi_value_site_pv"></span>
		    </span>
		    <span id="busuanzi_container_site_uv">
				，   Total uv：<span id="busuanzi_value_site_uv"></span>
		    </span>
			<span id="busuanzi_container_page_pv">
				，   Total page pv：<span id="busuanzi_value_page_pv"></span>
			</span>
		</div>		
	<% } %>
<% } %>
