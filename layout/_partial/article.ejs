<%- partial('post/title', {item: item, index: false}) %>

<div class="row <% if (post) { %>post<% } else { %>page<% } %>">
	<!-- cols -->
	<% if (post) { %>
	<div id="top_meta"></div>
	<div class="col-md-9">
	<% } else { %>
	<div class="col-md-12">
	<% } %>

	<!-- content -->
	<div class="mypage">		
	  <% if (item.description) { %>
		 <div class="alert alert-success description">
			<i class="fa fa-info-circle"></i> <%- markdown(item.description) %>			
		 </div> <!-- alert -->
	  <% } %>		

	  <%- item.content %>	 
	  <!-- declaration -->
	  <div class="declaration">
		<strong style="color:red;text-shadow: rgb(212, 106, 64) 5px 3px 3px;">Declaration :  </strong><br>
		<strong style="color:rgb(212, 106, 64);">Title :  </strong><a href="<%- config.root %><%= item.path %>"><%- item.title %></a><br>
		<strong style="color:rgb(212, 106, 64);">Url   :  </strong><a href="<%- config.root %><%= item.path %>"><%- config.url %><%- config.root %><%= item.path %></a><br>
		转载请注明出处<a href="<%- config.url %>">Frainmeng's Blog</a>，本博客采用<a href="http://creativecommons.org/licenses/by-nc-sa/2.5/cn/deed.zh">署名-非商业性使用-相同方式共享协议v2.5</a>
	  </div>
	</div>

	<div>
  	<center>
	<%- partial('post/pagination', {page: item}) %>
    </center>
	</div>
	
	<!-- 多说热评文章 start -->
	<div class="ds-top-threads" data-range="daily" data-num-items="5"></div>
	<!-- 多说热评文章 end -->
	
	<!-- comment -->
	<%- partial('post/comment', {page: item}) %>
	</div> <!-- col-md-9/col-md-12 -->
		
	<% if (post) { %>
	<div id="side_meta">
		<%- partial('post/meta', {item: item}) %>
	</div>
	<% } %>	

</div><!-- row -->
<%- partial('post/comment_footer', {page: item}) %>
